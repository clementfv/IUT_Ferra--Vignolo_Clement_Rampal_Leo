<Window x:Class="RobotInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RobotInterface"
        mc:Ignorable="d"
        Title="Robot Interface" Height="500" Width="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <GroupBox x:Name="Emission" Header="Emission" Grid.Row="1" Grid.Column="1" Background="#FFDDDDDD" BorderBrush="Black">
            <TextBox x:Name="textBoxEmission" 
                     Background="{x:Null}" 
                     BorderBrush="{x:Null}" 
                     AcceptsReturn="True" 
                     TextWrapping="Wrap"
                     KeyUp="TextBoxEmission_KeyUp" 
                     VerticalScrollBarVisibility="Auto"/>
        </GroupBox>

        <GroupBox x:Name="Reception" Header="Réception" Grid.Row="1" Grid.Column="3" Background="#FFDDDDDD" BorderBrush="Black">
            <TextBox x:Name="textBoxReception" 
                     Background="{x:Null}" 
                     BorderBrush="{x:Null}" 
                     IsReadOnly="True" 
                     TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"/>
        </GroupBox>

        <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button x:Name="buttonTest" Content="Test Payload" Width="100" Height="25" Margin="5,0" Click="ButtonTest_Click"/>
            <Button x:Name="buttonClear" Content="Clear" Width="80" Height="25" Margin="5,0" Click="ButtonClear_Click"/>
            <Button x:Name="buttonEnvoyer" Content="Envoyer" Width="80" Height="25" Margin="5,0" Click="ButtonEnvoyer_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Top">

            <GroupBox Header="Leds" Background="#FFDDDDDD" BorderBrush="Black" Margin="0,0,10,0" Width="80">
                <StackPanel Orientation="Vertical" Margin="5">
                    <CheckBox x:Name="Led1" Content="Led 1"/>
                    <CheckBox x:Name="Led2" Content="Led 2"/>
                    <CheckBox x:Name="Led3" Content="Led 3"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Télémètres IR" Background="#FFDDDDDD" BorderBrush="Black" Margin="0,0,10,0" Width="200">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock x:Name="IRLeft" Text="Capteur Gauche :  cm" Margin="2"/>
                    <TextBlock x:Name="IRCenter" Text="Capteur Centre :  cm" Margin="2"/>
                    <TextBlock x:Name="IRRight" Text="Capteur Droit :  cm" Margin="2"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Moteurs" Background="#FFDDDDDD" BorderBrush="Black" Margin="0,0,10,0" Width="200">
                <StackPanel Orientation="Vertical" Margin="5">
                    <TextBlock x:Name="MotorLeft" Text="Vitesse Gauche :  %" Margin="2"/>
                    <TextBlock x:Name="MotorRight" Text="Vitesse Droite :  %" Margin="2"/>
                </StackPanel>
            </GroupBox>

        </StackPanel>

    </Grid>
</Window>